@page "/Mangas"

@inject NavigationManager NavigationManager

<h1>
 Mangas
</h1>


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Window-like Dimension for Portrait Photos</title>
    <style>
        /* Container styling */
        .photo-container {
            width: 280px;
            height: 400px;
            border: 10px solid #000;
            overflow: hidden;
            position: relative;
            margin-bottom: 20px;
            float: left;
            margin-right: 20px;
            margin-top: 50px;
        }

            /* Portrait photo styling */
            .photo-container img {
                width: auto;
                height: 100%;
                display: block;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }

        /* Button container */
        .button-container {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            text-align: center;
        }

        /* NavLink button styling */
        .nav-link {
            background-color: #DA9833;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            text-decoration: none;
            font-size: 16px;
            transition: background-color 0.3s ease;
            box-sizing: border-box;
        }

            .nav-link:hover {
                background-color: #e0e0e0;
            }

    </style>
</head>
<body>
    <div class="photo-container">
        <img src="/Berserkerlogo.jpg" alt="Berserk Photo">
        <div class="button-container">
            <a href="Berserk" class="nav-link">
                <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Berserk
            </a>
        </div>
    </div>

    <div class="photo-container">
        <img src="/sololevelinglogo.jpg" alt="Solo Leveling Photo">
        <div class="button-container">
            <a href="SoloLeveling" class="nav-link">
                <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Solo Leveling
            </a>
        </div>
    </div>
</body>


